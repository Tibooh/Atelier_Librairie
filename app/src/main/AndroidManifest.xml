<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.dtrx.librairie" >
    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.BookCreationActivity"
            android:label="@string/title_activity_book_creation" >
        </activity>
        <activity
            android:name=".activities.BookCatalogActivity"
            android:label="@string/title_activity_collection_book" >
        </activity>
        <activity
            android:name=".activities.BookFilterCatalogActivity"
            android:label="@string/title_activity_book_filter_catalog" >
        </activity>
        <activity
            android:name=".activities.BookFilterCreationActivity"
            android:label="@string/title_activity_book_filter_creation" >
        </activity>
        <activity
            android:name=".activities.BookActivity"
            android:label="@string/title_activity_book" >
        </activity>
        <activity
            android:name=".activities.BookUpdateActivity"
            android:label="@string/title_activity_book_update" >
        </activity>
        <activity
            android:name=".activities.BookFilterUpdateActivity"
            android:label="@string/title_activity_book_filter_update" >
        </activity>
    </application>
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
</manifest>
