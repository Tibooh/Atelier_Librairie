<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.dtrx.librairie" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BookCreationActivity"
            android:label="@string/title_activity_book_creation" >
        </activity>
        <activity
            android:name=".CollectionBookActivity"
            android:label="@string/title_activity_collection_book" >
        </activity>
        <activity
            android:name=".BookFilterCatalogActivity"
            android:label="@string/title_activity_book_filter_catalog" >
        </activity>
        <activity
            android:name=".BookFilterCreationActivity"
            android:label="@string/title_activity_book_filter_creation" >
        </activity>
    </application>

</manifest>
